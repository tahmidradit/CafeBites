@model IEnumerable<Category>

<div class="col-md-12 col-sm-6">
    <div align="right" class="col-12">
        <button type="button" style="cursor:pointer" class="btn btn-info text-white" data-toggle="modal" data-target="#createCategoryPopupForm"><i class="fas fa-plus"></i>&nbsp; Category</button>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover table-bordered table-sm">
                <thead class="table table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Id)</th>
                        <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Name)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var items in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => items.Id)</td>
                            <td>@Html.DisplayFor(m => items.Name)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <br />
            <div class="alert alert-danger text-danger" role="alert">
                No categories found.
            </div>
        }
    </div>
</div>